fun is_game_over(secret_number, guess, chances) {
    if (secret_number == guess or chances == 0) {
        return true;
    } else {
        return false;
    }
}

fun game(secret_number, guess, chances) {
    writeln(
        "Welcome to indu guessing game. You have " 
        + chances 
        + " to guess a secret number that's in range of 1 to 100."
    );

    while (!is_game_over(secret_number, guess, chances)) {
        write("Enter a guess: ");
        guess = read();

        if (guess > secret_number) {
            writeln("Your guess is too high!");
        } else if (guess < secret_number) {
            writeln("Your guess is too low!");
        } else {
            return true;
        }

        chances = chances - 1;
    }

    return false;
}

var secret_number = 69;
var chances = 5;
var guess = 0;

if (game(secret_number, guess, chances)) {
    writeln("Congrats! You guessed it.");
} else {
    writeln("You lost!");
}